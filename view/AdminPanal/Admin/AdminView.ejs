<%- include('../header') %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>DataTables</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">DataTables</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">

                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Admin Data View</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="example1" class="table table-bordered table-striped" style="text-align: center;">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Gender</th>
                                            <th>Hobby</th>
                                            <th>City</th>
                                            <th>Description</th>
                                            <th>Image</th>
                                            <th>Operation</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(var ad of admindata) {%>
                                            <tr>

                                                <td>
                                                    <%= ad.name %>
                                                </td>
                                                <td>
                                                    <%= ad.email %>
                                                </td>
                                                <td>
                                                    <%= ad.gender %>
                                                </td>
                                                <td>
                                                    <%= ad.hobby %>
                                                </td>
                                                <td>
                                                    <%= ad.city %>
                                                </td>
                                                <td>
                                                    <%= ad.description %>
                                                </td>
                                                <td><img src="<%= ad.image %>" height="100"></td>

                                                <td><a href="/Admin/delete/<%= ad.id %>"><i class="fa-solid fa-trash-arrow-up" style="font-size: 25px; padding-right: 20px;"></i></a>
                                                    <a href="/Admin/update/<%= ad.id %>"><i class="fa-regular fa-pen-to-square" style="font-size: 25px;"></i></a>

                                                    <td>
                                                        <% if(ad.isActive) {%>
                                                            <a href="/admin/deactive/<%= ad.id %>"><i class="fa-regular fa-eye" style="color: #389b31; font-size: 25px;"></i></a>
                                                            <% } else { %>
                                                                <a href="/admin/active/<%= ad.id %>"><i class="fa-solid fa-eye" style="color: #d71919; font-size: 25px;"></i></a>
                                                                <% } %>
                                                    </td>
                                                    <!-- <td>
                                                        <% if(ad.isActive) {%>
                                                            <a href="?id=<%= ad.id %>&page=<%= cpage %>&status=deActive">Active</a>
                                                            <% } else { %>
                                                                <a href="?id=<%= ad.id %>&page=<%= cpage %>&status=Active">Deactive</a>
                                                                <% } %>
                                                    </td> -->
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Gender</th>
                                            <th>Hobby</th>
                                            <th>City</th>
                                            <th>Description</th>
                                            <th>Image</th>
                                            <th>Operation</th>
                                            <th>Status</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <%- include('../footer') %>