<%- include('../header') %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Admin Form</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Admin Add</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card card-warning">
                            <div class="card-header">
                                <h3 class="card-title">Admin Form</h3>
                            </div>
                            <div class="card-body">
                                <form action="/Admin/Adminupdaterecord" method="post" enctype="multipart/form-data" class="form-horizontal">
                                    <input type="hidden" name="adid" value="<%= data.id %>">

                                    <% var num = data.name.split(" ") %>

                                        <div class="row">
                                            <div class="col-sm-6">
                                                <!-- text input -->
                                                <div class="form-group">
                                                    <label>Enter first name</label>
                                                    <input type="text" class="form-control" placeholder="Enter First Name" name="first_name" value="<%= num[0] %>">
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Enter Second name</label>
                                                    <input type="text" class="form-control" placeholder="Enter Second Name" name="second_name" value="<%= num[1] %>">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">
                                                <label for="email-input" class=" form-control-label">Enter Email</label>
                                            </div>
                                            <div class="col-md-12">
                                                <input type="email" id="email-input" name="email" placeholder="Enter Email" class="form-control" value="<%= data.email %>">
                                                <small class="help-block form-text"></small>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">
                                                <label class=" form-control-label">Select Gender</label>
                                            </div>
                                            <div class="col-sm-12">
                                                <div class="form-check">
                                                    <div class="radio">
                                                        <label for="radio1" class="form-check-label ">
                                                                <input type="radio" id="radio1" name="gender" value="Male" class="form-check-input" value="Male"<% if(data.gender=="Male") {%><%= 'checked' %><% } %>>Male
                                                            </label>
                                                    </div>
                                                    <div class="radio">
                                                        <label for="radio2" class="form-check-label ">
                                                                <input type="radio" id="radio2" name="gender" value="Female" class="form-check-input" value="Male"<% if(data.gender=="Female") {%><%= 'checked' %><% } %>>Female
                                                            </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">
                                                <label class=" form-control-label">Select Hobby</label>
                                            </div>
                                            <div class="col-sm-12">
                                                <div class="form-check-inline form-check">
                                                    <label for="inline-radio1" class="form-check-label ">
                                                            <input type="checkbox" id="inline-radio1" name="hobby[]" value="Reading" class="form-check-input" value="Reading"<% if(data.hobby.includes("Reading")) {%><%= 'checked' %><% } %>>Reading
                                                        </label>
                                                    <label for="inline-radio2" class="form-check-label ">
                                                            <input type="checkbox" id="inline-radio2" name="hobby[]" value="Music" class="form-check-input" value="Reading"<% if(data.hobby.includes("Music")) {%><%= 'checked' %><% } %>>Music
                                                        </label>
                                                    <label for="inline-radio3" class="form-check-label ">
                                                            <input type="checkbox" id="inline-radio3" name="hobby[]" value="Traveling" class="form-check-input" value="Reading"<% if(data.hobby.includes("Traveling")) {%><%= 'checked' %><% } %>>Traveling
                                                        </label>
                                                </div>
                                            </div>
                                        </div>

                                        <% var city = ["Surat","Amreli","Bhavnagar"] %>

                                            <div class="row form-group">
                                                <div class="col-sm-12">
                                                    <label for="select" class=" form-control-label">Select City</label>
                                                </div>
                                                <div class="col-sm-12">
                                                    <select name="city" id="select" class="form-control">
                                                        <option value="0">Select city</option>
                                                        <% for(var i=0; i<city.length; i++ ) {%>
                                                        <option value="<%= city[i] %>"<% if(data.city==city[i]) {%><%= 'selected' %><% } %>><%= city[i] %></option>
                                                        <% } %>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-sm-12">
                                                    <label for="textarea-input" class=" form-control-label">Description</label>
                                                </div>
                                                <div class="col-sm-12">
                                                    <textarea name="description" id="textarea-input" rows="1" placeholder="Content..." class="form-control"><%= data.description %></textarea>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-sm-12">
                                                    <label for="file-input" class=" form-control-label">Image</label>
                                                </div>
                                                <div class="col-sm-12 d-flex">
                                                    <input type="file" id="file-input" name="image" class="form-control-file">
                                                    <img src="<%= data.image %>" height="100" width="100">
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary">Update</button>
                                            </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <%- include('../footer') %>