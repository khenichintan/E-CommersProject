<%- include('../header') %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Brand Update</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Brand Update</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card card-warning">
                            <div class="card-header">
                                <h3 class="card-title">Brand Update</h3>
                            </div>
                            <div class="card-body">
                                <form action="/Admin/Brand/Brandupdate" method="post" class="form-horizontal">

                                    <input type="hidden" name="brid" value="<%= data.id %>">

                                    <div class="row form-group">
                                        <div class="col-sm-12">
                                            <label for="select" class=" form-control-label">Select Category</label>
                                        </div>
                                        <div class="col-sm-12">
                                            <select name="cat_id" class="form-control">
                                                    <option>Select Category</option>
                                                    <% for(var sc of cetdata ) {%>
                                                    <option value="<%= sc.id %>" <% if(data.cat_id == sc.id) { %> <%='selected'%><%}%> ><%= sc.category %></option>
                                                    <% } %>
                                                </select>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col-sm-12">
                                            <label for="select" class=" form-control-label">Select Subcategory</label>
                                        </div>
                                        <div class="col-sm-12">
                                            <select name="subcat_id" class="form-control">
                                                    <option>Select Subcategory</option>
                                                    <% for(var sb of subcetdata ) {%>
                                                    <option value="<%= sb.id %>" <% if(data.subcat_id == sb.id) { %> <%='selected'%><%}%> ><%= sb.SubcategoryName %></option>
                                                    <% } %>
                                                </select>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col-sm-12">
                                            <label for="select" class=" form-control-label">Select Subcategory</label>
                                        </div>
                                        <div class="col-sm-12">
                                            <select name="Extracat_id" class="form-control">
                                                    <option>Select Extra Category</option>
                                                    <% for(var ec of Excatdata ) {%>
                                                    <option value="<%= ec.id %>" <% if(data.Extracat_id == ec.id) { %> <%='selected'%><%}%> ><%= ec.ExtracatName %></option>
                                                    <% } %>
                                                </select>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-12">
                                            <!-- text input -->
                                            <div class="form-group">
                                                <label>Brand Name</label>
                                                <input type="text" class="form-control" placeholder="Brand Name" name="Brandname" value="<%= data.Brandname %>">
                                            </div>
                                        </div>
                                    </div>

                                    <div class=" card-footer ">
                                        <button type="submit " class="btn btn-primary ">Update</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <%- include('../footer') %>